<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Smoke">
    <parameter name="baseUrl" value="prodUrl"></parameter>

    <test name="signUp">
        <groups>
            <run>
                <include name="Chrome" />
            </run>
        </groups>
        <classes>
            <class name="WebTests.HeaderTest">
                <methods>
                    <include name="openSignUp"/>
                </methods>
            </class>
            <class name="WebTests.SignUpTest">
            <methods>
                <include name="signUp"/>
            </methods>
            </class>
        </classes>
    </test>
</suite>
